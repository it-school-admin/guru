<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://lessonsGridTypeItemEdit.caption"
        focusComponent="form"
        messagesPack="su.itschool.guru.web.screens.lessonsgridtypeitem">
    <data>
        <instance id="lessonsGridTypeItemDc"
                  class="su.itschool.guru.entity.LessonsGridTypeItem">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="lessonsGridTypeItemDc">
            <column width="350px">
                <textField id="lessonNumberField" property="lessonNumber"/>
                <dateField id="lessonStartTimeField" property="lessonStartTime"/>
                <textField id="lessonEndTimeField" property="lessonEndTime"/>
                <textField id="gridTypeField" property="gridType"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
