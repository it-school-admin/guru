<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://lessonsGridTypeItemBrowse.caption"
        focusComponent="lessonsGridTypeItemsTable"
        messagesPack="su.itschool.guru.web.screens.lessonsgridtypeitem">
    <data readOnly="true">
        <collection id="lessonsGridTypeItemsDc"
                    class="su.itschool.guru.entity.LessonsGridTypeItem">
            <view extends="_local"/>
            <loader id="lessonsGridTypeItemsDl">
                <query>
                    <![CDATA[select e from guru_LessonsGridTypeItem e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="lessonsGridTypeItemsTable"
            spacing="true">
        <filter id="filter"
                applyTo="lessonsGridTypeItemsTable"
                dataLoader="lessonsGridTypeItemsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="lessonsGridTypeItemsTable"
                    width="100%"
                    dataContainer="lessonsGridTypeItemsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="lessonNumber"/>
                <column id="lessonStartTime"/>
                <column id="lessonEndTime"/>
                <column id="gridType"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="lessonsGridTypeItemsTable.create"/>
                <button id="editBtn" action="lessonsGridTypeItemsTable.edit"/>
                <button id="removeBtn" action="lessonsGridTypeItemsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
