<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://lessonsPlanningItemEdit.caption"
        focusComponent="form"
        messagesPack="su.itschool.guru.web.screens.lessonsplanningitem">
    <data>
        <instance id="lessonsPlanningItemDc"
                  class="su.itschool.guru.entity.LessonsPlanningItem">
            <view extends="_local">
                <property name="groupOfLearning" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="lessonsPlanningItemDc">
            <column width="350px">
                <textField id="schoolClassField" property="schoolClass"/>
                <textField id="hoursPerWeekField" property="hoursPerWeek"/>
                <pickerField id="groupOfLearningField" property="groupOfLearning"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
