<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://classLevelBrowse.caption"
        focusComponent="classLevelsTable"
        messagesPack="su.itschool.guru.web.screens.classlevel">
    <data readOnly="true">
        <collection id="classLevelsDc"
                    class="su.itschool.guru.entity.ClassLevel">
            <view extends="_local"/>
            <loader id="classLevelsDl">
                <query>
                    <![CDATA[select e from guru_ClassLevel e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="classLevelsTable"
            spacing="true">
        <filter id="filter"
                applyTo="classLevelsTable"
                dataLoader="classLevelsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="classLevelsTable"
                    width="100%"
                    dataContainer="classLevelsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="level"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="classLevelsTable.create"/>
                <button id="editBtn" action="classLevelsTable.edit"/>
                <button id="removeBtn" action="classLevelsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
