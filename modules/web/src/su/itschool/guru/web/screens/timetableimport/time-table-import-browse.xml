<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://timeTableImportBrowse.caption"
        focusComponent="timeTableImportsTable"
        messagesPack="su.itschool.guru.web.screens.timetableimport">
    <data readOnly="true">
        <collection id="timeTableImportsDc"
                    class="su.itschool.guru.entity.TimeTableImport">
            <view extends="_local"/>
            <loader id="timeTableImportsDl">
                <query>
                    <![CDATA[select e from guru_TimeTableImport e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="timeTableImportsTable"
            spacing="true">
        <filter id="filter"
                applyTo="timeTableImportsTable"
                dataLoader="timeTableImportsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="timeTableImportsTable"
                    width="100%"
                    dataContainer="timeTableImportsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="importTime"/>
                <column id="importFile"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="timeTableImportsTable.create"/>
                <button id="editBtn" action="timeTableImportsTable.edit"/>
                <button id="removeBtn" action="timeTableImportsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
