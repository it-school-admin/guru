<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://lessonEdit.caption"
        focusComponent="form"
        messagesPack="su.itschool.guru.web.screens.lesson">
    <data>
        <instance id="lessonDc"
                  class="su.itschool.guru.entity.Lesson">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="lessonDc">
            <column width="350px">
                <textField id="startTimeField" property="startTime"/>
                <textField id="endTimeField" property="endTime"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
