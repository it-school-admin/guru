<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://lessonEdit.caption"
        focusComponent="form"
        messagesPack="su.itschool.guru.web.screens.lesson">
    <data>
        <instance id="lessonDc"
                  class="su.itschool.guru.entity.Lesson" view="lesson-view-for-calendar">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="lessonDc">
            <column width="350px">
                <textField id="startTimeField" property="startTime"/>
                <textField id="endTimeField" property="endTime"/>
                <checkBox id="isDistantField" property="isDistant"/>
                <pickerField id="roomField" property="room"/>
                <textArea rows="5" id="topicOfTheLessonField" property="topicOfTheLesson"/>
                <textArea rows="5" id="toolsDescriptionField" property="toolsDescription"/>
                <pickerField id="planningItemField" property="planningItem"/>
                <pickerField id="subjectOnTheFlyField" property="subjectOnTheFly"/>
                <pickerField id="teacherOnTheFlyField" property="teacherOnTheFly"/>
                <textArea rows="5" id="homeTaskDesriptionField" property="homeTaskDescription"/>
                <textField id="captionForCalendarField" property="captionForCalendar"/>
                <pickerField id="weekField" property="week"/>
                <textField id="descriptionForCalendarField" property="descriptionForCalendar"/>
                <pickerField id="groupOnTheFlyField" property="groupOnTheFly"/>
                <textField id="styleForCalendarField" property="styleForCalendar"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
