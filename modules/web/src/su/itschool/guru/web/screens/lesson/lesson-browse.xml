<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://lessonBrowse.caption"
        focusComponent="lessonsTable"
        messagesPack="su.itschool.guru.web.screens.lesson">
    <data readOnly="true">
        <collection id="lessonsDc"
                    class="su.itschool.guru.entity.Lesson">
            <view extends="_local">
                <property name="room" view="_minimal"/>
                <property name="studyGroup" view="_minimal"/>
                <property name="planningItem" view="_minimal"/>
                <property name="subjectOnTheFly" view="_minimal"/>
                <property name="teacherOnTheFly" view="_minimal"/>
            </view>
            <loader id="lessonsDl">
                <query>
                    <![CDATA[select e from guru_Lesson e]]>
                </query>
            </loader>
        </collection>
        <collection id="weeksDc" class="su.itschool.guru.entity.Week">
            <view extends="_local"/>
            <loader id="weeksDl">
                <query>
                    <![CDATA[select e from guru_Week e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="lessonsTable"
            spacing="true">
        <groupTable id="weeksTable" height="100px" width="200px" dataContainer="weeksDc">
            <columns>
                <column id="weekNumber"/>
                <column id="startDate"/>
                <column id="endDate"/>
            </columns>
        </groupTable>
        <filter id="filter"
                applyTo="lessonsTable"
                dataLoader="lessonsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="lessonsTable"
                    width="100%"
                    dataContainer="lessonsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="planningItem"/>
                <column id="studyGroup"/>
                <column id="startTime"/>
                <column id="endTime"/>
                <column id="isDistant"/>
                <column id="room"/>
                <column id="topicOfTheLesson"/>
                <column id="toolsDescription"/>
                <column id="subjectOnTheFly"/>
                <column id="teacherOnTheFly"/>
                <column id="homeTaskDescription"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="lessonsTable.create"/>
                <button id="editBtn" action="lessonsTable.edit"/>
                <button id="removeBtn" action="lessonsTable.remove"/>
                <button id="loadFromTemplate" caption="msg://loadFromTemplate.caption"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
