<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://speakerEdit.caption"
        focusComponent="form"
        messagesPack="su.itschool.guru.web.screens.speaker">
    <data>
        <instance id="speakerDc"
                  class="su.itschool.guru.entity.Speaker">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="speakerDc">
            <column width="350px">
                <textField id="speakerNameField" property="speakerName"/>
                <textField id="speakerSurnameField" property="speakerSurname"/>
                <textField id="speakerEmailField" property="speakerEmail"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
