<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://groupForLessonEdit.caption"
        focusComponent="form"
        messagesPack="su.itschool.guru.web.screens.groupforlesson">
    <data>
        <instance id="groupForLessonDc"
                  class="su.itschool.guru.entity.GroupForLesson">
            <view extends="_local">
                <property name="schoolClass" view="_minimal"/>
                <property name="subject" view="_minimal"/>
                <property name="teacher" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="groupForLessonDc">
            <column width="350px">
                <textField id="groupNameField" property="groupName"/>
                <pickerField id="schoolClassField" property="schoolClass">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="subjectField" property="subject">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="teacherField" property="teacher">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="emailField" property="email"/>
                <textField id="teamsTeamField" property="teamsTeam"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
